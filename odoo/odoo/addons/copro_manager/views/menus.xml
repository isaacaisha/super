<odoo>
    <data>
        <!-- Top-level menu for your module -->
        <menuitem id="menu_copro_manager_root" name="Copro Manager" sequence="10"/>

        <!-- Action and Menu for Superadmins (using res.users) -->
        <record id="action_superadmin_list" model="ir.actions.act_window">
            <field name="name">Superadmins</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_superadmin" name="Superadmins" parent="menu_copro_manager_root" sequence="15"
                  action="action_superadmin_list"/>

        <!-- Action and Menu for Syndics -->
        <record id="action_syndic_list" model="ir.actions.act_window">
            <field name="name">Syndics</field>
            <field name="res_model">copro.syndic</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_syndic" name="Syndics" parent="menu_copro_manager_root" sequence="20"
                  action="action_syndic_list"/>

        <!-- Action and Menu for Copropriétaires -->
        <record id="action_coproprietaire_list" model="ir.actions.act_window">
            <field name="name">Copropriétaires</field>
            <field name="res_model">copro.coproprietaire</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_coproprietaire" name="Copropriétaires" parent="menu_copro_manager_root" sequence="25"
                  action="action_coproprietaire_list"/>

        <!-- Action and Menu for Prestataires -->
        <record id="action_prestataire_list" model="ir.actions.act_window">
            <field name="name">Prestataires</field>
            <field name="res_model">copro.prestataire</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_prestataire" name="Prestataires" parent="menu_copro_manager_root" sequence="30"
                  action="action_prestataire_list"/>

        <!-- Action and Menu for Licenses -->
        <record id="action_license_list" model="ir.actions.act_window">
            <field name="name">Licenses</field>
            <field name="res_model">copro.license</field>
            <field name="view_mode">list,form</field>
        </record>
        <menuitem id="menu_license" name="Licenses" parent="menu_copro_manager_root" sequence="35"
                  action="action_license_list"/>

        <!-- Action to and Menu for Residences -->
        <record id="action_residences_list" model="ir.actions.act_window">
            <field name="name">Residences</field>
            <field name="res_model">copro.residence</field>
            <!--<field name="context">{"search_default_active": 1}</field>-->
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu Item to access Residences -->
        <menuitem id="menu_residences" name="Residences" parent="menu_copro_manager_root" sequence="40" 
                  action="action_residences_list"/>
    </data>
</odoo>
